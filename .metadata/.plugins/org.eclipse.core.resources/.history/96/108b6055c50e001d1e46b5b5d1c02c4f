package metodos;

import javax.swing.JOptionPane;

public class Exercício02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int c = 0;
		int opcao = 0;
		double[] notas = new double[3];

		for (c = 0; c < 3; c++) {
			notas[c] = Integer.parseInt(JOptionPane.showInputDialog("Informe a sua " + (c + 1) + "º nota"));
			while ((notas[c] > 10) || (notas[c] < 0)) {
				JOptionPane.showMessageDialog(null, "Digite uma nota válida");
				notas[c] = Integer.parseInt(JOptionPane.showInputDialog("Informe a sua " + (c + 1) + "º nota"));
			}
		}
		opcao = Integer.parseInt(JOptionPane.showInputDialog("1- aritimética"));
		switch (opcao) {
		case 1:
			double totalA = 0;
			totalA = calculoAri(notas);
			JOptionPane.showMessageDialog(null, "Sua média aritimética é: "+totalA);
			break;
		}

	}

	public static double calculoAri(double[] nota) {
		double calculoA = 0;
		double totalA = 0;
		double[] notas = new double[3];

		for (int c = 0; c < 3; c++) {
			calculoA = calculoA + notas[c];
			totalA = calculoA / 3;

		}
		return totalA;
	}

	public static double calculoPon(double peso, double nota) {
		int escolhaPeso = 0;
		escolhaPeso = Integer.parseInt(JOptionPane.showInputDialog("Escolha os 3 pesos para sua média ponderada"));
		while (escolhaPeso < 3) {
			JOptionPane.showMessageDialog(null, "Escolha 3 pesos");
			escolhaPeso = Integer.parseInt(JOptionPane.showInputDialog("Escolha os 3 pesos para sua média ponderada"));
		}

		return 1;
	}

}
